# Backend Server Configuration - Development

# Flask settings
DEBUG=True
PORT=5000

# Database - Development (SQLite)
DATABASE_URL=sqlite:///llm_search_behavior.db

# Database - Production (Supabase/PostgreSQL)
# Get from: Supabase Dashboard → Settings → Database → Connection String
# DATABASE_URL=postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-us-east-1.pooler.supabase.com:6543/postgres

# Supabase (for production)
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_ANON_KEY=your_anon_key
# SUPABASE_SERVICE_KEY=your_service_role_key

# Data storage
DATA_STORAGE_PATH=./data/sessions

# Supabase Storage (optional, for cloud file storage)
# STORAGE_BACKEND=supabase
# SUPABASE_BUCKET=session-data

# AWS S3 (optional alternative for cloud storage)
# STORAGE_BACKEND=s3
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_S3_BUCKET=your-bucket-name
# AWS_REGION=us-east-1

# Security (for production)
# SECRET_KEY=your-secret-key-here
# ALLOWED_ORIGINS=chrome-extension://your-extension-id
